<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background4"
    tools:context="com.example.michal.myapplication.MainActivity">

    <TextView
        android:text="Welcome Back!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!--Find a new book to read-->
    <Button
        android:text="Find a New Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="82dp"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <!--User level-->
    <TextView
        android:text="Level - "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:layout_alignTop="@+id/button"
        android:layout_alignLeft="@+id/welcome"
        android:layout_alignStart="@+id/welcome" />

    <!--User number of points-->
    <Button
        android:text="\npoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="28dp"
        android:onClick="viewPoints"
        android:layout_below="@+id/welcome"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--view finished books (looks like hyperlink)-->
    <Button
        android:text="See books you've finished"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginBottom="22dp"
        android:textSize="12dp"
        android:id="@+id/button3"
        android:layout_alignRight="@+id/welcome"
        android:layout_alignEnd="@+id/welcome" />

    <!--"See more", if needed-->
    <Button
        android:text="see more..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:textSize="12dp"
        android:id="@+id/button4" />

    <!--"Your books"-->
    <TextView
        android:text="Your Books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9" />

    <!--Name of book in progress-->
    <TextView
        android:text="Lolita / Vladimir Nobokov"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:onClick="go"
        android:clickable="true"
        android:id="@+id/textView5"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <TextView
        android:text="Twilight / Stephenie Meyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:clickable="true"
        android:layout_alignRight="@+id/level"
        android:layout_alignEnd="@+id/level"
        android:layout_marginTop="24dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Pride and Prejudice / Jane Austen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:clickable="true"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="22dp" />

</RelativeLayout>